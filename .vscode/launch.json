{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome Ext",
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--load-extension=${workspaceFolder}/extension",
                "--disable-extensions-except=${workspaceFolder}/extension"
            ],
            "webRoot": "${workspaceFolder}/src", // 源码位置
            "sourceMaps": true,
            "runtimeExecutable": "/Applications/Microsoft Edge.app/Contents/MacOS/Microsoft Edge"
        }
    ]
}